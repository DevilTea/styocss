{
  "extends": "@deviltea/tsconfig/node",
  "include": [
    "./src/**/*.ts",
    "../core/src/**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": "..",
    "outDir": "./temp-dts",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@styocss/shared": [
        "../shared/src/index.ts"
      ],
      "@styocss/core": [
        "../core/src/index.ts"
      ]
    }
  }
}
